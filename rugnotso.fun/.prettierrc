{
  "tabWidth": 2,
  "printWidth": 120,
  "proseWrap": "preserve",
  "semi": false,
  "trailingComma": "es5",
  "singleQuote": true,
  "overrides": [
    {
      "files": "{*.js?(on),*.js,*.ts,*.y?(a)ml,.*.js?(on),.*.y?(a)ml,*.md,.prettierrc,.stylelintrc,.babelrc}",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "{**/*.json,**/tsconfig.json,**/tsconfig.*.json}",
      "options": {
        "parser": "json5",
        "quoteProps": "preserve",
        "singleQuote": false,
        "trailingComma": "all"
      }
    }
  ]
}
